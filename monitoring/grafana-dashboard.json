{
  "dashboard": {
    "id": null,
    "panels": [
      {
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "green",
                  "value": 1
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 0,
          "y": 0
        },
        "id": 1,
        "targets": [
          {
            "expr": "up{job=\"kindle-sync\"}",
            "legendFormat": "Service Status"
          }
        ],
        "title": "System Health Status",
        "type": "stat"
      },
      {
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 6,
          "y": 0
        },
        "id": 2,
        "targets": [
          {
            "expr": "kindle_sync_files_processed_total",
            "legendFormat": "Total Files"
          }
        ],
        "title": "Files Processed",
        "type": "stat"
      },
      {
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 12,
          "y": 0
        },
        "id": 3,
        "targets": [
          {
            "expr": "rate(kindle_sync_files_processed_total[5m])",
            "legendFormat": "Files/sec"
          }
        ],
        "title": "Processing Rate",
        "type": "stat"
      },
      {
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 0.1
                },
                {
                  "color": "red",
                  "value": 1
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 18,
          "y": 0
        },
        "id": 4,
        "targets": [
          {
            "expr": "rate(kindle_sync_errors_total[5m])",
            "legendFormat": "Errors/sec"
          }
        ],
        "title": "Error Rate",
        "type": "stat"
      },
      {
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        },
        "id": 5,
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(kindle_sync_file_processing_duration_seconds_bucket[5m]))",
            "legendFormat": "50th percentile"
          },
          {
            "expr": "histogram_quantile(0.95, rate(kindle_sync_file_processing_duration_seconds_bucket[5m]))",
            "legendFormat": "95th percentile"
          },
          {
            "expr": "histogram_quantile(0.99, rate(kindle_sync_file_processing_duration_seconds_bucket[5m]))",
            "legendFormat": "99th percentile"
          }
        ],
        "title": "File Processing Time",
        "type": "graph",
        "yAxes": [
          {
            "label": "Processing Time (seconds)",
            "min": 0
          }
        ]
      },
      {
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        },
        "id": 6,
        "targets": [
          {
            "expr": "kindle_sync_memory_usage_bytes",
            "legendFormat": "Memory Usage"
          }
        ],
        "title": "Memory Usage",
        "type": "graph",
        "yAxes": [
          {
            "label": "Bytes",
            "min": 0
          }
        ]
      },
      {
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        },
        "id": 7,
        "targets": [
          {
            "expr": "rate(kindle_sync_emails_sent_total[5m])",
            "legendFormat": "Emails Sent/sec"
          },
          {
            "expr": "rate(kindle_sync_emails_received_total[5m])",
            "legendFormat": "Emails Received/sec"
          }
        ],
        "title": "Email Operations",
        "type": "graph"
      },
      {
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        },
        "id": 8,
        "targets": [
          {
            "expr": "rate(kindle_sync_database_operations_total[5m])",
            "legendFormat": "DB Operations/sec"
          }
        ],
        "title": "Database Operations",
        "type": "graph"
      },
      {
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 24
        },
        "id": 9,
        "targets": [
          {
            "expr": "kindle_sync_active_processing_tasks",
            "legendFormat": "Active Tasks"
          }
        ],
        "title": "Active Processing Tasks",
        "type": "graph"
      },
      {
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 24
        },
        "id": 10,
        "targets": [
          {
            "expr": "kindle_sync_processing_queue_size",
            "legendFormat": "Queue Size"
          }
        ],
        "title": "Queue Size",
        "type": "graph"
      }
    ],
    "refresh": "30s",
    "schemaVersion": 27,
    "style": "dark",
    "tags": [
      "kindle-sync",
      "monitoring"
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timezone": "browser",
    "title": "Kindle Sync Monitoring Dashboard",
    "version": 1
  }
}
